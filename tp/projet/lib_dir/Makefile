########       AVR Library Makefile       ########
#####                                        #####
#####                      #####
#####          pour lib_dir - 2023           #####
##################################################

# Ce Makefile vous permet de compiler des projets
# pour les microcontroleurs Atmel AVR sur 
# Linux ou Unix, en utilisant l'outil AVR-GCC. 
# Ce Makefile supporte C & C++

#####      Details spécifique à la cible       #####
MCU=atmega324pa
PROJECTNAME=libstatique
PRJSRC= LED.cpp Timer.cpp Bouton.cpp Wheel.cpp Navigation.cpp memoire_24.cpp Communication.cpp can.cpp Debug.cpp ByteCodeInterpreter.cpp Sound.cpp lcm_so1602dtr_m_fw.cpp lcm_so1602dtr_m.cpp customprocs.cpp LineMaker.cpp
INC=
LIBS=
OPTLEVEL=s

####################################################

####### variables #######
CC=avr-gcc
OBJCOPY=avr-objcopy
AVRDUDE=avrdude
REMOVE=rm -f
HEXFORMAT=ihex
AR=avr-ar

####### Options de compilation #######
CFLAGS=-I. -MMD $(INC) -g -mmcu=$(MCU) -O$(OPTLEVEL) \
	-std=c++14 -fpack-struct -fshort-enums \
	-funsigned-bitfields -funsigned-char \
	-Wall

GCCVERSION := $(shell expr `$(CC) -dumpversion | cut -f1 -d.` \>= 12)
ifeq "$(GCCVERSION)" "1"
    CFLAGS += --param=min-pagesize=0
endif

CXXFLAGS=-fno-exceptions

CFLAGS += -DF_CPU=8000000UL

####### Cible (Target) #######
TRG=$(PROJECTNAME).a

####### Definition de tout les fichiers objets #######
CFILES=$(filter %.c, $(PRJSRC))
CPPFILES=$(filter %.cpp, $(PRJSRC))
OBJDEPS=$(CFILES:.c=.o) $(CPPFILES:.cpp=.o)

####### Creation des commandes du Makefile #######
.PHONY: all install clean

all: $(TRG)

$(TRG): $(OBJDEPS)
	$(AR) rcs $(TRG) $(OBJDEPS)

%.o: %.c
	$(CC) $(CFLAGS) -c $<

%.o: %.cpp
	$(CC) $(CFLAGS) $(CXXFLAGS) -c $<

-include *.d

install: $(TRG)
	@echo "Librairie compilée. "

clean:
	$(REMOVE) $(TRG) $(OBJDEPS) *.d

#####                    EOF                   #####